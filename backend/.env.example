# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
PORT=3001
# Niveaux de log disponibles : silent, error, warn, info, debug
LOG_LEVEL=error

# =================================
# TWITCH API CONFIGURATION
# =================================
# Obtenir ces clés depuis https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# =================================
# OBS WEBSOCKET CONFIGURATION
# =================================
# URL de connexion à OBS WebSocket (par défaut: ws://localhost:4455)
OBS_WEBSOCKET_URL=ws://localhost:4455
# Mot de passe pour OBS WebSocket (laisser vide si pas de mot de passe)
OBS_WEBSOCKET_PASSWORD=
# Activer ou désactiver la connexion OBS WebSocket
OBS_WEBSOCKET_ENABLED=false
# Intervalle de reconnexion en millisecondes
OBS_WEBSOCKET_RECONNECT_INTERVAL=5000
# Nombre maximum de tentatives de reconnexion
OBS_WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# =================================
# STREAMING CONFIGURATION
# =================================
# Intervalle de mise à jour des streams en millisecondes (recommandé: 180000 = 3 minutes pour éviter rate limit)
STREAM_UPDATE_INTERVAL=180000
# Nombre de vérifications échouées avant de marquer un stream comme offline (pour éviter les faux positifs)
STREAM_OFFLINE_GRACE_PERIOD=2
# Taille maximum des batches pour les requêtes API Twitch (max 100, réduit pour éviter les rate limits)
TWITCH_API_BATCH_SIZE=10
# Durée de cache des statuts Twitch en millisecondes (120000 = 2 minutes pour équilibrer fraîcheur et performance)
TWITCH_CACHE_DURATION=120000
